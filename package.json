{
  "name": "@loancrate/json-selector",
  "version": "3.0.0",
  "description": "LoanCrate JSON Selectors",
  "keywords": [
    "json",
    "path",
    "selector"
  ],
  "homepage": "https://github.com/loancrate/json-selector#readme",
  "bugs": {
    "url": "https://github.com/loancrate/json-selector/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loancrate/json-selector.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "files": [
    "dist",
    "src"
  ],
  "main": "dist/json-selector.umd.js",
  "module": "dist/json-selector.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && rollup -c rollup.config.mjs",
    "lint": "eslint src",
    "lint:ci": "eslint src --max-warnings 0 --format junit --output-file test-results/eslint/junit.xml",
    "generate-peggy": "mkdirp src/__generated__ && peggy -o src/__generated__/parser.js src/grammar.pegjs",
    "prepare": "husky && npm run generate-peggy && npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "test": "jest",
    "test:ci": "jest --ci --runInBand"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@tsconfig/recommended": "^1.0.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "mkdirp": "^3.0.1",
    "peggy": "^5.0.6",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "type-fest": "^5.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --list-different",
    "*.ts": "eslint"
  },
  "publishConfig": {
    "access": "public"
  }
}
