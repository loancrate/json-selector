{
  "name": "@loancrate/json-selector",
  "version": "4.0.0",
  "description": "LoanCrate JSON Selectors",
  "keywords": [
    "json",
    "path",
    "selector"
  ],
  "homepage": "https://github.com/loancrate/json-selector#readme",
  "bugs": {
    "url": "https://github.com/loancrate/json-selector/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loancrate/json-selector.git"
  },
  "license": "ISC",
  "author": "Trevor Robinson",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/json-selector.umd.js",
  "module": "dist/json-selector.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/json-selector.umd.js",
      "import": "./dist/json-selector.esm.js",
      "require": "./dist/json-selector.umd.js",
      "default": "./dist/json-selector.umd.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "benchmark": "tsx benchmark/index.ts",
    "build": "rimraf dist && rollup -c rollup.config.mjs",
    "changeset": "changeset",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src test benchmark",
    "lint:ci": "eslint src test benchmark --max-warnings 0 --format junit --output-file test-results/eslint/junit.xml",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "release": "changeset publish",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@jmespath-community/jmespath": "^1.3.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@tsconfig/recommended": "^1.0.13",
    "@types/jest": "^30.0.0",
    "@types/jmespath": "^0.15.2",
    "@types/node": "^22.19.1",
    "eslint": "^9.39.1",
    "eslint-formatter-junit": "^9.0.1",
    "eslint-plugin-jest": "^29.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "jmespath": "^0.16.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "type-fest": "^5.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --check",
    "*.ts": "eslint"
  },
  "publishConfig": {
    "access": "public"
  }
}
